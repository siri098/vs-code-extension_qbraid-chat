{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "out",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": "./",
		"types": ["node", "vscode", "mocha"]
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "out"]
}
